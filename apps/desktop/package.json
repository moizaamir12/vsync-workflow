{
  "name": "@vsync/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main/index.cjs",
  "scripts": {
    "dev": "concurrently -n main,preload \"tsup --watch\" \"wait-on dist/main/index.cjs && electron .\"",
    "build": "tsup",
    "build:mac": "pnpm build && electron-builder --mac",
    "build:win": "pnpm build && electron-builder --win",
    "build:linux": "pnpm build && electron-builder --linux",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.0",
    "@vsync/auth": "workspace:*",
    "@vsync/config": "workspace:*",
    "@vsync/db": "workspace:*",
    "@vsync/engine": "workspace:*",
    "@vsync/engine-adapters": "workspace:*",
    "@vsync/shared-types": "workspace:*",
    "better-sqlite3": "^11.0.0",
    "esbuild": "^0.27.3",
    "sharp": "^0.33.5",
    "electron-log": "^5.0.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.0.0",
    "hono": "^4.0.0",
    "ws": "^8.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/ws": "^8.5.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "tsup": "^8.0.0",
    "wait-on": "^8.0.0"
  }
}
